{{#if userAuth.ifAuth}}
  <div id="new-question-box-first">
    <form>
      <div class="form-group">
        <label for="text">Question:</label>
        {{textarea value=text id="text" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="text">Additional Notes:</label>
        {{textarea value=note id="note" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="timestamp">Time Stamp:</label>
        {{input value=timestamp id="timestamp" class="form-control" type="date"}}
       </div>
      <button class="btn btn-primary" {{action 'saveQuestion'}}>Ask!</button>
    </form>
  </div>
{{else}}
  <div id="info">
    <h4><span id="title">questionMaster</span> is a place to share information.<br><br>Join the community to add a question or ask one!</h4>
    {{#link-to 'login' id="login-btn"}}Login/Create Account{{/link-to}}
  </div>
{{/if}}
